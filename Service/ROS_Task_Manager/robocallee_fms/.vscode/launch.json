{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: g++ build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/install/robocallee_fms/lib/robocallee_fms/robocallee_fms_node",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": 
            [
                { "name": "LD_LIBRARY_PATH", "value": "${workspaceFolder}/install/robocallee_fms/lib:${workspaceFolder}/../../Lib/opencv_r/bin:${workspaceFolder}/../../Lib/YAML/bin:/opt/ros/jazzy/lib" },
                { "name": "AMENT_PREFIX_PATH", "value": "${workspaceFolder}/install" },
                { "name": "RCLCPP_LOG_LEVEL", "value": "info" }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                { "description": "Show thread events", "text": "set print thread-events on" }
            ],
            "preLaunchTask": "C/C++: g++ build active file",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
